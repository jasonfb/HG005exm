- if @pronoun.errors.none?
  = turbo_stream.replace "pronouns-list" do
    = render partial: "list", locals: {pronouns: @pronouns}

= turbo_stream.replace "pronoun-new" do
  - if @pronoun.errors.none?
    = render partial: "new_button"
  - else
    = render partial: "new_form", locals: {pronoun: @pronoun}

= turbo_stream.replace "flash_notices" do
  = render partial: "layouts/flash_notices"
  - if @pronoun.errors.any?
    = render partial: "errors", locals: {resource: @pronoun}